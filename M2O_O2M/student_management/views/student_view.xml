<odoo>

    <!-- Student List View -->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student.list</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="course_id"/>
                <field name="student_age"/>
            </list>
        </field>
    </record>

    <!-- Student Form View -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="course_id"/>
                    </group>
                    <group>
                        <field name="dob"/>
                        <field name="student_age" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Student Action -->
    <record id="action_student_management" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management.student</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
