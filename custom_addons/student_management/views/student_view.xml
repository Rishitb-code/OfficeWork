<odoo>

    <!-- List View -->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student.management.list</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date_of_birth"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
   <record id="view_student_form" model="ir.ui.view">
    <field name="name">student.management.form</field>
    <field name="model">student.management</field>
    <field name="arch" type="xml">
        <form>

            <sheet>

                <!-- Header -->
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="date_of_birth"/>
                    </group>
                </group>

                <!-- Notebook -->
                <notebook>
                    <page string="Academic Records">
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="subject"/>
                                <field name="teacher"/>
                                <field name="marks"/>
                                <field name="remarks"/>
                            </list>
                        </field>
                    </page>

                    <page string="Notes">
                        <group>
                            <field name="note"/>
                        </group>
                    </page>
                </notebook>

            </sheet>

            <!-- ğŸ”´ CHATTER  -->
            <chatter>
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </chatter>

        </form>
    </field>
</record>






    <!-- Action -->
    <record id="action_student_management" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_student_management_tree" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_student_root" name="Student Management"/>
    <menuitem id="menu_student"
              name="Students"
              parent="menu_student_root"
              action="action_student_management"/>

    <!-- Root Menu â†’ Creates Dashboard App -->
    <menuitem id="menu_student_root"
              name="Student Management"
              sequence="10"/>

    <!-- Child Menu -->
    <menuitem id="menu_student" name="Students"
              parent="menu_student_root"
              action="action_student_management"/>


</odoo>
