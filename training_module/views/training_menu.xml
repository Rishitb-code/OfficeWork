<odoo>

    <!-- Window Actions -->
    <record id="action_training_trainer" model="ir.actions.act_window">
        <field name="name">Trainers</field>
        <field name="res_model">training.trainer</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_training_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_training_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">training.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_training_root" name="_Training_"/>

    <menuitem id="menu_training_trainer"
              name="Trainers"
              parent="menu_training_root"
              action="action_training_trainer"/>

    <menuitem id="menu_training_course"
              name="Courses"
              parent="menu_training_root"
              action="action_training_course"/>

    <menuitem id="menu_training_student"
              name="Students"
              parent="menu_training_root"
              action="action_training_student"/>

</odoo>
